<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/main"
    tools:context="sdu.margulan.layouts.MainActivity"
    android:padding="0dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="155dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="80sp"
        android:layout_margin="0dp"
        android:gravity="bottom|right" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="AC"
        android:id="@+id/Clear"
        android:singleLine="false"
        android:textSize="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_border"
        android:onClick="onClickAC" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="7"
        android:id="@+id/san7"
        android:singleLine="false"
        android:textSize="30dp"
        android:layout_below="@+id/Clear"
        android:layout_alignLeft="@+id/Clear"
        android:layout_alignStart="@+id/Clear"
        android:background="@drawable/button_border"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="8"
        android:id="@+id/san8"
        android:singleLine="false"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/san7"
        android:layout_toRightOf="@+id/san7"
        android:layout_toEndOf="@+id/san7"
        android:background="@drawable/button_border"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="9"
        android:id="@+id/san9"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button_border"
        android:layout_alignBottom="@+id/san8"
        android:layout_toRightOf="@+id/san8"
        android:layout_toEndOf="@+id/san8"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="x^2"
        android:id="@+id/kvadrat"
        android:singleLine="false"
        android:textSize="20dp"
        android:background="@drawable/button_border"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/Clear"
        android:layout_toEndOf="@+id/Clear"
        android:onClick="onClickDarezhe" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="4"
        android:id="@+id/san4"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button_border"
        android:layout_below="@+id/san7"
        android:layout_alignLeft="@+id/san7"
        android:layout_alignStart="@+id/san7"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="5"
        android:id="@+id/san5"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button_border"
        android:layout_alignBottom="@+id/san4"
        android:layout_toLeftOf="@+id/san9"
        android:layout_toStartOf="@+id/san9"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="6"
        android:id="@+id/san6"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button_border"
        android:layout_alignBottom="@+id/san5"
        android:layout_toRightOf="@+id/san5"
        android:layout_toEndOf="@+id/san5"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/button9"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button_border"
        android:layout_below="@+id/san4"
        android:layout_alignLeft="@+id/san4"
        android:layout_alignStart="@+id/san4"
        android:layout_toStartOf="@+id/san5"
        android:layout_toLeftOf="@+id/san5"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="2"
        android:id="@+id/san2"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button_border"
        android:layout_below="@+id/san5"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="x^3"
        android:id="@+id/kub"
        android:singleLine="false"
        android:textSize="20dp"
        android:background="@drawable/button_border"
        android:layout_above="@+id/san9"
        android:layout_toRightOf="@+id/kvadrat"
        android:layout_toEndOf="@+id/kvadrat"
        android:onClick="onClickDarezhe" />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="/"
        android:id="@+id/divide"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button1_border"
        android:layout_above="@+id/san9"
        android:layout_toRightOf="@+id/san9"
        android:layout_toEndOf="@+id/san9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="x"
        android:id="@+id/kobeitu"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button1_border"
        android:layout_below="@+id/divide"
        android:layout_toRightOf="@+id/san9"
        android:layout_toEndOf="@+id/san9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="-"
        android:id="@+id/minus"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button1_border"
        android:layout_below="@+id/kobeitu"
        android:layout_toRightOf="@+id/san6"
        android:layout_toEndOf="@+id/san6"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="3"
        android:id="@+id/san3"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button_border"
        android:layout_below="@+id/san5"
        android:layout_toRightOf="@+id/san2"
        android:layout_toEndOf="@+id/san2"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="+"
        android:id="@+id/plus"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button1_border"
        android:layout_below="@+id/san6"
        android:layout_toRightOf="@+id/san3"
        android:layout_toEndOf="@+id/san3"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:text="0"
        android:id="@+id/san0"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button_border"
        android:layout_below="@+id/button9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="="
        android:id="@+id/ten"
        android:singleLine="false"
        android:textSize="30dp"
        android:background="@drawable/button1_border"
        android:layout_alignTop="@+id/san0"
        android:layout_toRightOf="@+id/san0"
        android:layout_toEndOf="@+id/san0"
        android:onClick="onClickEqual" />

</RelativeLayout>
